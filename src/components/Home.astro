---
// Sample recent posts - replace with actual CMS later
const recentPosts = [
    {
        slug: "medici-banking-empire",
        title: "The Medici Bank: Renaissance Wealth Creation",
        date_created: "2024-01-15",
        tags: ["Historical Wealth", "Banking", "Renaissance"],
        short_body: "Exploring how the Medici family built one of history's most powerful banking empires and transformed Florence into the financial capital of Europe."
    },
    {
        slug: "roman-trade-networks", 
        title: "Modern Lessons from Ancient Roman Trade",
        date_created: "2024-01-10",
        tags: ["Economic History", "Trade", "Ancient Rome"],
        short_body: "What today's entrepreneurs can learn from the sophisticated trading networks that powered the Roman Empire's unprecedented wealth."
    },
    {
        slug: "tulip-mania-lessons",
        title: "The Rise and Fall of Tulip Mania",
        date_created: "2024-01-05", 
        tags: ["Market Bubbles", "Financial History", "Netherlands"],
        short_body: "Examining the world's first recorded speculative bubble and the timeless lessons it teaches about human psychology and market dynamics."
    }
];
---

<div class="max-w-screen-xl shadow-2xl mx-auto flex-1 text-slate-900" style="background-color: #f6f2ea;">
	
	<!-- Hero Section -->
	<section class="relative overflow-hidden min-h-[520px] md:min-h-[560px]">
		<!-- Background -->
		<img
		  src="/images/home-page-hero.jpg"
		  alt="Early world map symbolizing historical trade and wealth"
		  class="absolute inset-0 w-full h-full object-cover object-center"
		  style="filter:contrast(1.02) brightness(0.95) saturate(0.9);"
		  loading="lazy" decoding="async"
		/>
	  
		<!-- Softer overlays -->
		<div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(40,10,12,0.15)_0%,rgba(40,10,12,0.55)_90%)]"></div>
		<div class="absolute inset-0 bg-gradient-to-b from-[#2b0d11]/35 via-[#2b0d11]/20 to-[#2b0d11]/35"></div>
	  
		<!-- Centered content -->
		<div class="relative z-10 flex items-center justify-center h-full px-6 py-16">
		  <div class="w-full max-w-4xl mx-auto text-center">
	  
			<!-- Hidden SEO H1 -->
			<h1 class="sr-only">Historical Finance Principles for Modern Wealth Strategy</h1>
	  
			<!-- Editorial Lead -->
			<p class="lead drop-cap font-serif text-[1.05rem] sm:text-lg md:text-xl leading-relaxed text-[#F8F3EC] mx-auto max-w-3xl backdrop-blur-[1px] drop-shadow-[0_2px_4px_rgba(0,0,0,0.55)]">
			  The Money‑Printing Press uncovers the recurring patterns inside stories of merchants, empires, and markets—how fortunes were built, defended, and lost. Each issue distills a single principle you can use now.
			</p>
	  
			<!-- Invite -->
			<p class="mt-6 font-medium text-sm sm:text-base text-[#F8F3EC] drop-shadow-[0_2px_3px_rgba(0,0,0,0.55)]">
			  <strong class="font-semibold">Join early readers</strong> for one focused historical finance lesson each week.
			</p>
	  
			<!-- Form -->
			<form id="hero-newsletter-form" novalidate
				  class="mt-6 flex flex-col sm:flex-row gap-3 max-w-2xl mx-auto">
			  <label for="hero-email" class="sr-only">Email address</label>
			  <input
				id="hero-email"
				type="email"
				required
				placeholder="Enter your email…"
				aria-describedby="hero-newsletter-error"
				class="flex-1 min-w-[240px] rounded-sm border border-[#D8CCB9] bg-white/92 px-4 py-3 text-sm font-serif
					   focus:outline-none focus:border-[#B59030] focus:ring-2 focus:ring-[#B59030]/40 transition
					   placeholder:text-neutral-500 shadow-sm"
			  />
			  <button type="submit"
				class="px-6 py-3 bg-[#B59030] text-[#2B1A12] font-medium text-sm rounded-sm
					   hover:bg-[#C6A041] active:bg-[#A07D27] focus:outline-none
					   focus:ring-2 focus:ring-[#B59030]/50 transition shadow">
				Subscribe
			  </button>
			</form>
	  
			<p id="hero-newsletter-error" class="mt-2 text-xs text-[#FFDDD9] hidden"></p>
			<p id="hero-newsletter-success" class="mt-2 text-xs text-[#F8F3EC] font-medium hidden">
			  Check your inbox for confirmation.
			</p>
			<p class="mt-2 text-[0.65rem] tracking-wide text-[#F8F3EC]/75">
			  One email a week • no spam • unsubscribe anytime
			</p>
		  </div>
		</div>
	  </section>
	  
  
		<!-- Subtle bottom fade -->
		<div class="absolute bottom-0 left-0 w-full h-12 bg-gradient-to-t from-black/30 to-transparent pointer-events-none"></div>
	</section>

	<!-- Latest Posts Section -->
	<section class="py-20" style="background-color: #FBF9F4;">
		<div class="container mx-auto px-6 max-w-6xl">
			<h2 class="text-4xl font-semibold mb-12 text-center victoria-font"
				style="font-family: 'Victoria', 'Times New Roman', serif; color: #2F4858;">
				Latest Insights
			</h2>
			
			<div class="grid md:grid-cols-1 gap-8 mb-12">
				{recentPosts.map((post) => (
					<div class="border-b border-gray-200 pb-8 last:border-b-0">
						<div class="p-4 mx-auto">
							<a href={`/blog/${post.slug}`} class="font-semibold">
								<div class="flex flex-col gap-3">
									<h2 class="text-3xl hover:text-slate-900 transition-colors duration-200"
										style="hover:color: #9e383d;">
										{post.title}
									</h2>
									<div class="flex flex-wrap gap-2 mb-2">
										{post.tags.map((tag) => (
											<span class="text-gray-700 px-3 py-1 rounded-full text-sm border-2"
												  style="background-color: #f9f9f9; border-color: #d4af37; color: #7f1d1d;">
												{tag}
											</span>
										))}
									</div>
									<p class="text-gray-500 border-t-1 border-b-1 border-gray-300 py-2 mb-2">
										{new Date(post.date_created).toLocaleDateString("en-US", {
											year: "numeric",
											month: "long", 
											day: "numeric",
										})}
									</p>
									<div class="text-gray-700 text-xl leading-relaxed">
										{post.short_body}
									</div>
								</div>
							</a>
						</div>
					</div>
				))}
			</div>
			
			<div class="text-center">
				<a
					href="/archive"
					class="inline-block text-white font-semibold px-8 py-3 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl"
					style="background: linear-gradient(135deg, #9e383d, #7f1d1d);"
					onmouseover="this.style.transform='translateY(-2px)'"
					onmouseout="this.style.transform='translateY(0)'"
				>
					View All Posts
				</a>
			</div>
		</div>
	</section>
