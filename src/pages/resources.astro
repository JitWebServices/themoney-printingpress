---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="max-w-screen-xl shadow-2xl mx-auto flex-1 font-serif text-slate-900" style="background-color: #f6f2ea;">
		
		<!-- Header Section -->
		<section class="py-16 hero-section">
			<img
			src="https://images.unsplash.com/photo-1481627834876-b7833e8f5570?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
				alt="Ancient books and scrolls in historical library"
				class="w-full h-[300px] object-cover"
				style="filter: saturate(0.3);"
			/>
			<div class="absolute inset-0 flex flex-col items-center justify-center hero-overlay">
				<h1 class="text-4xl md:text-5xl font-light text-white mb-4 tracking-tight"
					style="font-family: 'Victoria', 'Times New Roman', serif; color: #B08A30; text-shadow: 0 1px 2px rgba(0,0,0,0.35);">
					Resources
				</h1>
				<p class="text-lg md:text-xl max-w-2xl mx-auto font-sans tracking-wide" style="color: #F6F2EA;">
